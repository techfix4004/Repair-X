# Production Environment Variables for RepairX
# Copy this file to .env.production and customize for your environment

# Environment
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://repairx:Tech!8989*@postgres:5432/repairx_production
POSTGRES_USER=repairx
POSTGRES_PASSWORD=Tech!8989*
POSTGRES_DB=repairx_production

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=Tech!8989*

# JWT Configuration
JWT_SECRET=d3a6b4d4b5c2e3a8f90e1c9a8b7e6d4c2f1e8b7a9c4d2e6f9b8a7c6d5e4f2a1b3
JWT_EXPIRES_IN=24h

# Payment Gateway Configuration
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live

# Square
SQUARE_APPLICATION_ID=your_square_application_id
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_ENVIRONMENT=production

# SMS Configuration
SMS_GATEWAY=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_email@repairx.com
SMTP_PASS=your_app_password

# File Storage Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=repairx-production-files

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Security Configuration
CORS_ORIGIN=https://app.repairx.com,https://admin.repairx.com
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=3600000

# Business Configuration
COMPANY_NAME=RepairX Enterprise
COMPANY_EMAIL=support@repairx.com
COMPANY_PHONE=+1-800-REPAIRX
DEFAULT_TIMEZONE=America/New_York

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MOBILE_PAYMENTS=true
ENABLE_MULTI_TENANT=true

# API Configuration
API_VERSION=v1
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Session Configuration
SESSION_SECRET=your_secure_session_secret
SESSION_TIMEOUT=86400000

# Compliance Configuration
PCI_DSS_MODE=strict
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/repairx.crt
SSL_KEY_PATH=/etc/ssl/private/repairx.key

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=10000

# Performance Configuration
CLUSTER_WORKERS=auto
MAX_MEMORY_USAGE=1024

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="RepairX is currently undergoing maintenance. Please try again in a few minutes."
