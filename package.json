{
  "name": "repairx-automation",
  "version": "1.0.0",
  "description": "RepairX comprehensive repair service platform with Six Sigma quality automation",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build:all": "cd backend && npm run build && cd ../frontend && npm run build",
    "test:all": "cd backend && npm test && cd ../frontend && npm test",
    "lint:all": "cd backend && npm run lint && cd ../frontend && npm run lint",
    "quality:check": "tsx scripts/six-sigma-automation.ts",
    "visual:test": "tsx scripts/visual-automation.ts",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose up -d",
    "deploy": "bash deploy.sh",
    "automation:full": "npm run quality:check && npm run visual:test",
    "deploy:production": "tsx scripts/production-deployment-orchestrator.ts --env=production --branch=main --no-mock --strict-prod",
    "test:e2e": "tsx scripts/production-deployment-orchestrator.ts --test-only --env=production --roles=developer,user,client,technician,admin --no-mock --all-workflows --check-db --check-api --check-ui --real-email-sms --verify-business-logic --verify-job-sheets --verify-navigation --verify-payments --verify-headers --verify-navbar --strict",
    "report:generate": "tsx scripts/production-deployment-orchestrator.ts --report-only --output=prod-readiness-final.log --fail-on-error --include=all-logs,screenshots,db-diff,api-traces",
    "production:full": "tsx scripts/production-deployment-orchestrator.ts"
  },
  "keywords": [
    "repair",
    "service",
    "platform",
    "six-sigma",
    "automation",
    "quality",
    "compliance"
  ],
  "author": "RepairX Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "playwright": "^1.54.2",
    "tsx": "^4.20.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2"
  }
}
