{
  "name": "repairx-automation",
  "version": "1.0.0",
  "description": "RepairX comprehensive repair service platform with Six Sigma quality automation",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build:all": "cd backend && npm run build && cd ../frontend && npm run build",
    "test:all": "cd backend && npm test && cd ../frontend && npm test",
    "lint:all": "cd backend && npm run lint && cd ../frontend && npm run lint",
    "quality:check": "tsx scripts/six-sigma-automation.ts",
    "visual:test": "tsx scripts/visual-automation.ts",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "deploy": "bash deploy.sh",
    "automation:full": "npm run quality:check && npm run visual:test"
  },
  "keywords": [
    "repair",
    "service",
    "platform",
    "six-sigma",
    "automation",
    "quality",
    "compliance"
  ],
  "author": "RepairX Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "playwright": "^1.54.2",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2"
  }
}
