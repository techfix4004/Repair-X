{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/index.ts",
    "src/routes/health.ts", 
    "src/routes/auth-clean.ts",
    "src/routes/business-clean.ts",
    "src/routes/advanced-job-management.ts",
    "src/routes/quality-assurance.ts",
    "src/routes/enhanced-index.ts",
    "src/services/six-sigma-monitor.ts",
    "src/services/business-intelligence-enhanced.ts",
    "src/__tests__/core-system.test.ts",
    "src/__tests__/enhanced-business-features.test.ts",
    "src/types/index.ts",
    "src/types/missing-interfaces.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}