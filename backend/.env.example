# Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# Database
DATABASE_URL="postgresql://repairx_user:repairx_password@localhost:5432/repairx_db?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# SaaS Admin Security Keys
SAAS_ADMIN_KEY=change-this-saas-admin-key-in-production
MASTER_INIT_KEY=change-this-master-init-key-in-production

# Frontend URL for invitation links
FRONTEND_URL=http://localhost:3000

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Local Storage Configuration (for development)
LOCAL_STORAGE_PATH=/app/uploads
LOCAL_STORAGE_BASE_URL=http://localhost:3001/uploads
LOCAL_STORAGE_MAX_SIZE=104857600
LOCAL_STORAGE_ALLOWED_TYPES=image/*,application/pdf,text/*

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=60000

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_COUNT=5